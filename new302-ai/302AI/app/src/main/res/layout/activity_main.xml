                            android:background="@color/color302AI"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/startVoiceTv"
                        android:background="@drawable/shape_select_site_bg_line4"
                        android:layout_width="322dp"
                        android:layout_height="40dp"
                        android:text="@string/voice_message"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/color302AI"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/doVoiceLine"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                        android:id="@+id/keyBoardImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/icon_new_keyboard"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/doVoiceLine"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>





                <TextView
                    android:id="@+id/bottomTv"
