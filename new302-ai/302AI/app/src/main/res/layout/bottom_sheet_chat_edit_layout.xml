<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_select_site_bg_dialog_bottom"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_bottom_title_message"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/textSettingColor1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons1"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_select_site_bg_write">


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:focusable="true"
            android:gravity="center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:hint="@string/chat_title"
            android:maxLength="20"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/textCountsTv"/>

        <TextView
            android:id="@+id/textCountsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@color/textSettingColor"
            app:layout_constraintRight_toLeftOf="@+id/textCountsTv1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/textCountsTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/20"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/textSettingColor"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/someSettingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_bottom_parameter_message"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons1"
        android:textColor="@color/textSettingColor1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons2"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/someSettingTv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shape_select_site_bg_write">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/modelSelectDialogConst"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/view3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_bottom_model_message"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <LinearLayout
                android:id="@+id/modelSelectDialogLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/textModeTv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAlignment="textEnd"
                    android:ellipsize="end"
                    android:text="gemini-2.5-flash-nothink"
                    android:textSize="16sp"
                    android:textColor="@color/textSettingColor"/>

                <ImageView
                    android:id="@+id/modelSelectDialogTv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_new_left"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/lineSetting"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kbConst"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/view3"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_bottom_kb_message"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_bottom_painting_message"
                    android:textSize="16sp"
                    android:textColor="@color/textSettingColor"/>

                <ImageView
                    android:id="@+id/kbDialogTv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_new_left"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/cueWordDialogTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_bottom_cue_words_message"
        android:textSize="14sp"
        android:layout_marginTop="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons2"
        android:textColor="@color/textSettingColor1"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons6"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cueWordDialogTv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shape_select_site_bg_write">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_bottom_prompt_message"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <LinearLayout
            android:id="@+id/cueWordDialogLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/promptTv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="textEnd"
                android:text="你好有什么都可以问我"
                android:textSize="16sp"
                android:textColor="@color/textSettingColor"/>

            <ImageView
                android:id="@+id/cueWordDialogImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_new_left"
                android:layout_marginLeft="10dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/randomnessTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_bottom_random_message"
        android:textSize="14sp"
        android:layout_marginTop="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons6"
        android:textColor="@color/textSettingColor1"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons3"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/randomnessTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_select_site_bg_write">

        <!-- 滑动条控件 -->
        <SeekBar
            android:id="@+id/seekBarDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="6dp"
            android:max="100"
            android:progress="50"
            android:layout_marginTop="16dp"
            style="@style/CustomSeekBarStyle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_bottom_precise_message"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/textColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBarDialog"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_bottom_creativity_message"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/textColor"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBarDialog"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/shareDialogTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_bottom_share_message"

        android:textSize="14sp"
        android:layout_marginTop="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons3"
        android:textColor="@color/textSettingColor1"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons5"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@+id/shareDialogTv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shape_select_site_bg_write">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/botShareLinkConst"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/view5"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_bottom_link_share_message"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/shareLinkDialogImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_new_left"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/lineSetting"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/screenshotDialogConst"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_bottom_generate_screenshot_message"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <LinearLayout
                android:id="@+id/screenshotDialogLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/screenshotDialogImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_new_left"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>
