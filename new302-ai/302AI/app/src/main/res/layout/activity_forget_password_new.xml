<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_feed_back_bg"
    tools:context=".ui.login.ForgetPassWordNewActivity">
    <TextView
        android:id="@+id/backMainTv"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="@string/jump_login"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/textSettingColor"
        android:layout_marginRight="29dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_title"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/logo_login_new"
        app:layout_constraintTop_toBottomOf="@+id/backMainTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_login_r20_white_bg"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">
            <LinearLayout
                android:id="@+id/ll_email_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_email_login_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sms_verify"
                    android:textColor="@color/un_selected"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view_email_line"
                    android:layout_width="70dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/shape_line_r2_bg_302ai"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_phone_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toRightOf="@+id/ll_email_login"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_email_phone_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_verify"
                    android:textColor="@color/un_selected"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view_phone_line"
                    android:layout_width="80dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/shape_line_r2_bg_302ai"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/dividing_line" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SmsConst"

                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/view">
                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/phone_msg"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <com.newAi302.app.widget.view.PhoneLocationView
                    android:id="@+id/rl_phone_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/phoneTv"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/ImageVsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verification_new"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/rl_phone_location"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <RelativeLayout
                    android:id="@+id/rl_verify_code_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/ImageVsTv"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <com.newAi302.app.widget.view.VerificationEditTextView
                        android:id="@+id/verification_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/verifyCodeView" />

                    <com.newAi302.app.widget.view.VerifyCodeView
                        android:id="@+id/verifyCodeView"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="10dp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/SmsVsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vc_msg"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/rl_verify_code_img"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <RelativeLayout
                    android:id="@+id/rl_verify_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_verify_code_img"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/SmsVsTv">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edit_verify_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/input_bg"
                        android:hint="@string/please_verify_code"
                        android:maxLines="1"
                        android:minWidth="150dp"
                        android:minHeight="48dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/input_hint"
                        android:textSize="14sp"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_verify_code"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/edit_verify_code"
                        android:gravity="center"
                        android:background="@drawable/shape_line_r2_bg_302ai"
                        android:text="@string/get_verify_code"
                        android:textColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_code_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_verify_code"
                        android:textColor="@color/empty_tip"
                        android:textSize="14sp"
                        tools:text="@string/empty_tip" />

                </RelativeLayout>

                <com.newAi302.app.widget.view.PassWorkEditView
                    android:id="@+id/rl_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint="@string/email_password"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/rl_verify_code"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <com.newAi302.app.widget.view.PassWorkEditView
                    android:id="@+id/rl_password_again"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint="@string/email_password_again"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/rl_password"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/smsBtnConst"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:layout_constraintTop_toBottomOf="@+id/rl_password_again">
                    <TextView
                        android:id="@+id/btnBackLoginPhone"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:text="@string/back_login_message"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/color302AI"
                        android:background="@drawable/shape_line_r2_bg_302ai_back_login"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/spaceView"/>
                    <View
                        android:id="@+id/spaceView"
                        android:layout_width="14dp"
                        android:layout_height="44dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <TextView
                        android:id="@+id/btnResetPassPhone"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="@string/change_password_save_message"
                        android:background="@drawable/shape_line_r2_bg_302ai_change_password"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/spaceView"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/smsRegisterTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/color302AI"
                    android:textSize="14sp"
                    android:text="@string/no_account_yet"
                    app:layout_constraintTop_toBottomOf="@id/smsBtnConst"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailConst"
                android:visibility="gone"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/view">
                <TextView
                    android:id="@+id/emailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/email_new_name"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <RelativeLayout
                    android:id="@+id/emailInputRelative"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/input_bg"
                    app:layout_constraintTop_toBottomOf="@+id/emailTv"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_email"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/icon_email" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/img_email"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:singleLine="true"
                        android:hint="@string/email_name"
                        android:textColor="@color/black"
                        android:textColorHint="@color/input_hint"
                        android:textSize="14sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/EmailVsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vc_msg"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/emailInputRelative"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <RelativeLayout
                    android:id="@+id/inPutVsRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/EmailVsTv">

                    <RelativeLayout
                        android:id="@+id/rl_email_code"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toStartOf="@+id/tv_email_verify_code"
                        android:background="@color/input_bg">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_email_code"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/icon_email" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_email_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@+id/img_email_code"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/email_verify_code"
                            android:lines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/input_hint"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_email_verify_code"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_line_r2_bg_302ai"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/get_email_verify_code"
                        android:textColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_empty_tip_email_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_email_code"
                        android:textColor="@color/empty_tip"
                        android:textSize="14sp"
                        tools:text="@string/email_code_empty" />
                </RelativeLayout>

                <com.newAi302.app.widget.view.PassWorkEditView
                    android:id="@+id/rl_password_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint="@string/email_password"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/inPutVsRelative"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <com.newAi302.app.widget.view.PassWorkEditView
                    android:id="@+id/rl_password_again_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint="@string/email_password_again"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/rl_password_email"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/smsBtnEmailConst"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:layout_constraintTop_toBottomOf="@+id/rl_password_again_email">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:text="@string/back_login_message"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/color302AI"
                        android:background="@drawable/shape_line_r2_bg_302ai_back_login"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/spaceView1"/>
                    <View
                        android:id="@+id/spaceView1"
                        android:layout_width="14dp"
                        android:layout_height="44dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="@string/change_password_save_message"
                        android:background="@drawable/shape_line_r2_bg_302ai_change_password"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/spaceView1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/smsRegisterEmailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/color302AI"
                    android:textSize="14sp"
                    android:text="@string/no_account_yet"
                    app:layout_constraintTop_toBottomOf="@id/smsBtnEmailConst"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>






        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>