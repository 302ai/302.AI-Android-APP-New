<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_select_site_bg_write"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topTitleConst"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/payDialogBackLine"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/backImage1"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_new_back"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_text_title_message"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/textColor"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payConst5"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_select_site_bg_write_pay_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topTitleConst">

        <TextView
            android:id="@+id/payTv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/pay1Tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PTC"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginTop="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/payTv5"
            app:layout_constraintTop_toTopOf="@+id/payTv5"
            app:layout_constraintLeft_toRightOf="@+id/payTv5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$5.00"
            android:layout_marginBottom="6dp"
            android:textColor="@color/payText"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        
        <ImageView
            android:id="@+id/paySelectImage5"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:visibility="gone"
            android:background="@drawable/icon_pay_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payConst20"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape_select_site_bg_write_pay_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topTitleConst">
        <TextView
            android:id="@+id/payTv20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/pay1Tv20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PTC"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginTop="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/payTv20"
            app:layout_constraintTop_toTopOf="@+id/payTv20"
            app:layout_constraintLeft_toRightOf="@+id/payTv20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$20.00"
            android:layout_marginBottom="6dp"
            android:textColor="@color/payText"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/paySelectImage20"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:visibility="gone"
            android:background="@drawable/icon_pay_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payConst50"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_select_site_bg_write_pay_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topTitleConst">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/icon_hot"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_text_hot_message"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/payTv50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/pay1Tv50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PTC"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginTop="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/payTv50"
            app:layout_constraintTop_toTopOf="@+id/payTv50"
            app:layout_constraintLeft_toRightOf="@+id/payTv50"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$50.00"
            android:layout_marginBottom="6dp"
            android:textColor="@color/payText"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/paySelectImage50"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:visibility="gone"
            android:background="@drawable/icon_pay_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payConst100"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_select_site_bg_write_pay_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payConst5">

        <TextView
            android:id="@+id/payTv100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/pay1Tv100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PTC"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginTop="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/payTv100"
            app:layout_constraintTop_toTopOf="@+id/payTv100"
            app:layout_constraintLeft_toRightOf="@+id/payTv100"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100.00"
            android:layout_marginBottom="6dp"
            android:textColor="@color/payText"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/paySelectImage100"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:visibility="gone"
            android:background="@drawable/icon_pay_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payConst220"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_select_site_bg_write_pay_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payConst5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/icon_recommend"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_text_recommend_message"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/payTv220"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="220"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/pay1Tv220"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PTC"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginTop="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/payTv220"
            app:layout_constraintTop_toTopOf="@+id/payTv220"
            app:layout_constraintLeft_toRightOf="@+id/payTv220"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/pay_text_gift_message"
            android:layout_marginBottom="2dp"
            android:textColor="@color/color302AI"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/payText"/>

        <TextView
            android:id="@+id/payText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$200.00"
            android:layout_marginBottom="6dp"
            android:textColor="@color/payText"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/paySelectImage220"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:visibility="gone"
            android:background="@drawable/icon_pay_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/messageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/pay_text_recharge_instructions_message"
        android:textSize="14sp"
        android:textColor="@color/payText1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/payConst100"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/message1Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textSize="12sp"
        android:text="@string/pay_text_explanation_message"
        android:layout_marginTop="6dp"
        android:textColor="@color/payText1"
        app:layout_constraintTop_toBottomOf="@+id/messageTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/nextLine"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_select_site_bg_black_line"
        app:layout_constraintTop_toBottomOf="@+id/message1Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/pay_text_next_message"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nextLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_text_agree_message"
            android:textSize="12sp"
            android:textColor="@color/payText2"/>
        <TextView
            android:id="@+id/payProtocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_text_pay_protocol_message"
            android:textSize="12sp"
            android:textColor="@color/black"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
